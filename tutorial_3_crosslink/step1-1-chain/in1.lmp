units           lj
atom_style      bond
special_bonds   fene

neighbor        0.4 bin
neigh_modify    every 1 delay 1 check yes

read_data       data1.in

velocity        all create 0.0 12345 dist uniform

reset_timestep  0

pair_style      lj/expand 1.12246
pair_coeff      * * 1.0 1.0 0.0 1.12246

bond_style      fene
bond_coeff      1 30.0 1.5 1.0 1.0

fix 1 all nve
fix 2 all langevin 1.0 1.0 2.0 12345

timestep        0.001
thermo_style    multi
thermo          10000

dump            d1 all cfg 1000 cfg/run.*.cfg mass type xs ys zs id type
dump_modify     d1 element C N S

restart         200000 restart1
run             200000
